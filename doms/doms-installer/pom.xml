    <build>
        <plugins>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.7</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <id>sboi summa</id>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <target>
                                <mkdir dir="${project.build.directory}/sboi-summarise/"/>
                                <!--
                                <scp knownhosts="${project.basedir}/known_hosts" file="fedora@alhena.statsbiblioteket.dk:/fedora/SummariseReleases/newspapr-${summarise.version}/*" todir="${project.build.directory}/summarise/" keyfile="${env.SSH_KEY}" />
                                -->
                                <exec failonerror="true" executable="rsync">
                                    <arg line="-avz -e 'ssh -i ${env.SSH_KEY} -o UserKnownHostsFile=&quot;${project.basedir}/known_hosts&quot;' fedora@alhena.statsbiblioteket.dk:/fedora/SummariseReleases/newspapr-${sboi.summarise.version}/* &quot;${project.build.directory}/sboi-summarise/&quot;"/>

                                    <!--
                                    <arg line="-av /Users/ravn/Downloads/newspapr-${sboi.summarise.version}.zip &quot;${project.build.directory}/sboi-summarise/&quot;" />
                                    -->
                                </exec>
                            </target>
                        </configuration>
                    </execution>
                    <execution>
                        <phase>package</phase>
                        <id>domswui summa</id>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <target>
                                <mkdir dir="${project.build.directory}/domswui-summarise/"/>
                                <!--
                                <scp knownhosts="${project.basedir}/known_hosts" file="fedora@alhena.statsbiblioteket.dk:/fedora/SummariseReleases/newspapr-${summarise.version}/*" todir="${project.build.directory}/summarise/" keyfile="${env.SSH_KEY}" />
                                -->
                                <exec failonerror="true" executable="rsync">
                                    <arg line="-avz -e 'ssh -i ${env.SSH_KEY} -o UserKnownHostsFile=&quot;${project.basedir}/known_hosts&quot;' fedora@alhena.statsbiblioteket.dk:/fedora/SummariseReleases/domswui-${domswui.summarise.version}/* &quot;${project.build.directory}/domswui-summarise/&quot;"/>
                                    <!--
                                    <arg line="-av /Users/ravn/Downloads/domswui-${domswui.summarise.version}.zip &quot;${project.build.directory}/domswui-summarise/&quot;" />
                                                -->
                                </exec>
                            </target>
                        </configuration>
                    </execution>
                </executions>
                <dependencies>
                    <dependency>
                        <groupId>org.apache.ant</groupId>
                        <artifactId>ant-jsch</artifactId>
                        <version>1.8.2</version>
                    </dependency>
                </dependencies>
            </plugin>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>2.2-beta-4</version>
                <executions>
                    <execution>
                        <id>make-assembly</id>
                        <configuration>
                            <descriptors>
                                <descriptor>src/main/assembly/assembly.xml</descriptor>
                            </descriptors>
                            <tarLongFileMode>gnu</tarLongFileMode>
                            <ignoreMissingDescriptor>true</ignoreMissingDescriptor>
                        </configuration>

                        <!-- this is used for inheritance merges -->
                        <phase>package</phase>
                        <!-- append to the packaging phase. -->
                        <goals>
                            <goal>single</goal>
                            <!-- goals == mojos -->
                        </goals>

                    </execution>

                    <execution>
                        <configuration>
                            <descriptors>
                                <descriptor>src/main/assembly/assemblyTestbed.xml</descriptor>
                            </descriptors>
                            <tarLongFileMode>gnu</tarLongFileMode>
                            <ignoreMissingDescriptor>true</ignoreMissingDescriptor>
                        </configuration>

                        <id>make-assembly-testbed</id>
                        <!-- this is used for inheritance merges -->
                        <phase>package</phase>
                        <!-- append to the packaging phase. -->
                        <goals>
                            <goal>single</goal>
                            <!-- goals == mojos -->
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <!-- ensure that developer-config/ is present! -->
            <!-- http://maven.apache.org/enforcer/enforcer-rules/requireFilesExist.html -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-enforcer-plugin</artifactId>
                <version>1.4.1</version>
                <executions>
                    <execution>
                        <id>enforce-files-exist</id>
                        <goals>
                            <goal>enforce</goal>
                        </goals>
                        <configuration>
                            <rules>
                                <requireFilesExist>
                                    <message>*** devel-config not present - check README.md for cloning instructions
                                        ***
                                    </message>
                                    <files>
                                        <file>${project.basedir}/src/vagrant/devel-config</file>
                                    </files>
                                </requireFilesExist>
                            </rules>
                            <fail>true</fail>
                        </configuration>
                    </execution>
                </executions>

            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>3.0.0</version>
                <executions>
                    <execution>
                        <id>copy</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.bitrepository.reference</groupId>
                                    <artifactId>bitrepository-integration</artifactId>
                                    <classifier>quickstart</classifier>
                                    <type>tar.gz</type>

                                    <overWrite>yes</overWrite>
                                    <outputDirectory>${project.build.directory}/artifacts-copied/</outputDirectory>
                                    <destFileName>bitrepository-integration-quickstart.tar.gz</destFileName>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>dk.statsbiblioteket.doms.installer</groupId>
                                    <artifactId>doms-installer</artifactId>
                                    <classifier>testbed</classifier>
                                    <type>tar.gz</type>
                                    <overWrite>yes</overWrite>
                                    <outputDirectory>${project.build.directory}/artifacts-copied/</outputDirectory>
                                    <destFileName>doms-installer-testbed.tar.gz</destFileName>
                                </artifactItem>
                            </artifactItems>
                            <!-- other configurations here -->
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
